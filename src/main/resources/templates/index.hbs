{{#partial "title"}}index{{/partial}}

{{#partial "content"}}
    <div class="row">
        <div class="col-md-5"><br>
<!--            <div class="container">-->
                <img src="https://cdn.pixabay.com/photo/2019/01/01/10/59/pubg-3906571__340.png" alt="squad" width="30%">
                <h1 class=""><strong>SQUADS:</strong></h1>
                {{#if squads}}
                    {{#each squads}}
                        <div class="card w-75">
                            <div class="card-body">
                                <h3 class="card-title text"><strong class="text">Name: {{squadName}}</strong></h3>
                                <p class="card-text"><strong class="text">{{squadSize}} </strong>members <br></br>Cause: <strong class="text">{{squadCause}}</strong> <br><strong class="text">{{maxSize}} </strong>Maximum Members</p>
<!--                                <a href="/squads/{{id}}" class="btn btn-outline-success">view squad</a>-->
                            </div>
                            <hr>
                        </div>
                    {{/each}}
                {{else}}
                    <p>No heroes yet!</p>
                {{/if}}
<!--            </div>-->
        </div><br>
        <div class="col-md-5">
<!--            <div class="container">-->
            <img src="https://cdn.pixabay.com/photo/2019/01/01/10/59/pubg-3906571__340.png" alt="squad" width="30%">
                <h1 class=""><strong> HEROES:</strong></h1>
                {{#if heroes}}
                    {{#each heroes}}
                        <div class="card w-75">
                            <div class="card-body">
                                <h3 class="card-title text"><strong>Name: {{heroName}}</strong></h3><br>
                                <p class="card-text"><strong>{{heroAge}}</strong> years old<br> Power: <strong>{{heroPower}}</strong><br> Weakness: <strong>{{heroWeakness}}</strong><br> Squad: <strong>{{heroSquad}}</strong></p>
                            </div>
                        </div>
                        <hr>
                    {{/each}}
                {{else}}
                    <p>No heroes yet!</p>
                {{/if}}
<!--            </div>-->
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}